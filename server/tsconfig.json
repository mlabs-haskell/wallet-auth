{
  "compilerOptions": {
    "target": "es2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "strict": true,
  },
    "lib": ["es2016", "dom"],
"include": [
    "./src/**/*.ts",
    "./test/**/*.ts"
],
    "exclude": ["node_modules"]
}
